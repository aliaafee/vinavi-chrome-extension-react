{
    "manifest_version": 3,
    "name": "Vinavi Chrome Extension",
    "description": "Chrome extension to more conveniently browse episodes on Vinavi",
    "host_permissions": [
        "https://vinavi.aasandha.mv/"
    ],
    "content_scripts": [
        {
            "matches": [
                "http://hinai.igmh.gov.mv/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "action": {
        "default_title": "View Vinavi Episodes for Current Patient",
        "default_popup": "popup.html",
        "default_icon": {
            "16": "/images/icon16.png",
            "32": "/images/icon32.png",
            "48": "/images/icon48.png",
            "128": "/images/icon128.png"
        }
    },
    "icons": {
        "16": "/images/icon16.png",
        "32": "/images/icon32.png",
        "48": "/images/icon48.png",
        "128": "/images/icon128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "tabs",
        "storage"
    ]
}